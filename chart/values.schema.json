    "monitoring": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      },
      "required": []
    },
    "networkPolicies": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      },
      "required": []
    },
    "csi": {
      "type": "object",
      "properties": {
        "driver": {
          "type": "string"
        },
        "defaultClass": {
          "type": "string"
        }
      },
      "required": []
    },
    "bbtests": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      },
      "required": []
    }
  },
  "required": ["upstream"]
}
