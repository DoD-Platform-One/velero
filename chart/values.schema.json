    "domain": {
      "type": "string"
    },
    "istio": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "hardened": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            }
          },
          "required": []
        },
        "mtls": {
          "type": "object",
          "properties": {
            "mode": {
              "type": "string"
            }
          },
          "required": []
        }
      },
      "required": []
